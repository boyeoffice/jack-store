version: "3.3"
services:
  app:
    build:
      context: .
      args:
        UID: ${UID:-1000}
        GID: ${GID:-1000}
    volumes:
      - type: volume
        source: mydata
        target: /home/container
      - type: bind
        source: ./
        target: /home/container

volumes:
  mydata:
